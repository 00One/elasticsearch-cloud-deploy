{
  "description": "Elasticsarch Image",
  "builders": [
    {
      "type": "amazon-ebs",

      "ami_name": "elasticsearch5-{{isotime | clean_ami_name}}",
      "availability_zone": "{{user `aws_region`}}a",
      "iam_instance_profile": "packer",
      "instance_type": "t2.micro",
      "region": "{{user `aws_region`}}",
      "run_tags": {
        "role": "packer"
      },
      "source_ami": "{{user `aws_base_ami`}}",
      "ssh_timeout": "10m",
      "ssh_username": "ubuntu",
      "tags": {
        "Name": "elasticsearch-packer-image"
      },
      "enhanced_networking": true
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "update-machine.sh",
      "execute_command": "echo '' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'"
    },
    {
      "type": "file",
      "source": "../templates/elasticsearch.yml",
      "destination": "elasticsearch.yml"
    },
    {
      "type": "shell",
      "script": "install-java8.sh",
      "execute_command": "echo '' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'"
    },
    {
      "type": "shell",
      "script": "install-elasticsearch.sh",
      "execute_command": "echo '' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'"
    },
    {
      "type": "shell",
      "script": "install-awsplugin.sh",
      "execute_command": "echo '' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'"
    },
    {
      "type": "shell",
      "inline": [ "sleep 10" ]
    }
  ]
}
