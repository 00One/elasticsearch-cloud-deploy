{
  "variables": {
    "base_ami": "ami-280d1e3f"
  },
  "description": "Kibana Image",
  "builders": [
    {
      "ami_name": "kibana-{{isotime | clean_ami_name}}",
      "availability_zone": "us-east-1a",
      "iam_instance_profile": "packer",
      "instance_type": "c4.large",
      "region": "us-east-1",
      "run_tags": {
        "role": "packer"
      },
      "source_ami": "{{user `base_ami`}}",
      "ssh_timeout": "10m",
      "ssh_username": "ubuntu",
      "tags": {
        "Name": "kibana-packer-image"
      },
      "type": "amazon-ebs",
      "enhanced_networking": true
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [ "sleep 10" ]
    },
    {
      "type": "shell",
      "script": "install-kopf.sh",
      "execute_command": "echo '' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'"
    },
    {
      "type": "file",
      "source": "../templates/nginx-client.conf",
      "destination": "nginx-client.conf"
    },
    {
      "type": "shell",
      "script": "install-nginx.sh",
      "execute_command": "echo '' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'"
    },
    {
      "type": "shell",
      "script": "install-kibana.sh",
      "execute_command": "echo '' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'"
    }
  ]
}
